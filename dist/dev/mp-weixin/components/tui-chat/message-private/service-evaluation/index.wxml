<block wx:if="{{display}}"><view class="tui-cards-container"><view class="service-evaluation"><view class="header"><label class="header-label">请对本次服务进行评价</label><view data-event-opts="{{[['tap',[['handleClose',['$event']]]]]}}" class="btn-close" bindtap="__e">关闭</view></view><view class="main"><view class="main-evaluation-score"><block wx:for="{{scoreList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><image class="score-star" data-score="{{item}}" src="{{'/static/static/images/star'+(item>score?'-grey':'')+'.png'}}" data-event-opts="{{[['tap',[['handleScore',['$event']]]]]}}" bindtap="__e"></image></block></view><textarea class="main-textarea" cols="30" rows="10" placeholder="请输入评语" placeholder-style="textarea-placeholder" data-event-opts="{{[['input',[['bindTextAreaInput',['$event']]]]]}}" bindinput="__e"></textarea></view><view class="footer"><view class="btn" disabled="{{score===0&&!comment}}" data-event-opts="{{[['tap',[['sendMessage',['$event']]]]]}}" bindtap="__e">提交评价</view></view></view></view></block>