page {
  background-color: #ffffff;
}
.app-article-detail {
  padding: 18px;
}
.app-article-detail-header {
  font-size: 24px;
  font-weight: 600;
  padding: 20px 0px;
}
.app-article-detail-header .title {
  margin: 14px 0px;
}
.app-article-detail-header .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.app-article-detail-header .info .user-logo {
  width: 32px;
  height: 32px;
  background: #eee;
  border-radius: 50%;
  margin-right: 8px;
}
.app-article-detail-header .info .user-name {
  font-size: 14px;
  color: #3873fe;
  font-weight: 400;
}
.app-article-detail-header .tips {
  margin-top: 14px;
  border-top: 1px #eee solid;
  font-size: 12px;
  font-weight: 400;
  color: #999;
  padding: 14px 0px;
}
.app-article-detail-content {
  line-height: 1.8;
}
.app-article-detail-content ._img {
  margin: 14px 0px;
}
.video {
  width: 100%;
}
