.ronin-home {
  background: #f6fafe;
  height: 100%;
}
.ronin-home .home-head {
  width: 100%;
  height: 356rpx;
  background: #3873fe;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 32rpx;
  padding-top: 28rpx;
  padding-top: 176rpx;
  position: relative;
}
.ronin-home .home-head .head-img {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.ronin-home .home-head .head-name {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #fff;
  margin-left: 28rpx;
}
.ronin-home .home-head .head-bg-all-img {
  top: 0;
  left: 0;
  position: absolute;
}
.ronin-home .home-head .head-bg-img {
  width: 140rpx;
  height: 176rpx;
  position: absolute;
  right: 60rpx;
  bottom: 0;
}
.ronin-home .home-title {
  font-weight: 600;
  font-size: 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 30rpx;
}
.ronin-home .home-title .icon {
  width: 8rpx;
  height: 30rpx;
  border-radius: 4rpx;
  background: #3873fe;
  margin-right: 10rpx;
}
.ronin-home .home-list {
  padding: 0 28rpx;
  padding-top: 80rpx;
}
.ronin-home .home-list .list-item {
  margin-bottom: 32rpx;
}
.ronin-home .home-list .list-item .btn {
  display: block;
}
.ronin-home .home-list .list-item .btn .u-btn {
  border: 0px solid #000;
}
